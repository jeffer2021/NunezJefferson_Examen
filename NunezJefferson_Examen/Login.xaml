<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NunezJefferson_Examen.MainPage">

    <StackLayout>
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
        <Entry x:Name="txtUser" Placeholder="Usuario: "></Entry>
        <Entry x:Name="txtPass" Placeholder="Contraseña: " IsPassword="True"></Entry>
        <Label Text="" x:Name="lblResultado" TextColor="Blue"></Label>

        <Button x:Name="btnAbrir"
                Text="INGRESAR"
                Clicked="btnAbrir_Clicked"></Button>
    </StackLayout>

</ContentPage>
